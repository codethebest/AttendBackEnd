<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liyolomoko.attendeventappfrontend.views.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tbusername"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tbpassword"
        android:layout_below="@+id/tbusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:hint="Password"
        android:linksClickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin"
        android:layout_marginTop="52dp"
        android:background="#763562"
        android:textColor="#ffffff"
        android:layout_below="@+id/tbpassword"
        android:layout_centerHorizontal="true"
        android:onClick="btnlogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnregister"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#763562"
        android:textColor="#ffffff"
        android:onClick="btnregister" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/erroreditText"
        android:layout_below="@+id/btnlogin"
        android:layout_alignLeft="@+id/tbpassword"
        android:layout_alignStart="@+id/tbpassword"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/tbpassword"
        android:layout_alignEnd="@+id/tbpassword" />
</RelativeLayout>
